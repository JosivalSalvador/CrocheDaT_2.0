generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  
}

enum Role {
  ADMIN
  SUPPORTER
  USER
}

// 2. Tipos de Token
enum TokenType {
  REFRESH_TOKEN
  PASSWORD_RESET
  EMAIL_VERIFY
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String   // Nome técnico: guarda o hash
  role          Role     @default(USER)
  
  // Mapeamento: CamelCase no código JS, snake_case no Banco (Boas práticas SQL)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  tokens        Token[] 

  @@map("users")
}

model Token {
  id        String    @id @default(uuid())
  type      TokenType 
  createdAt DateTime  @default(now()) @map("created_at")
  
  // Opcional: data para expirar o token no banco
  expiresAt DateTime? @map("expires_at")

  userId    String    @map("user_id")
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("tokens")
}