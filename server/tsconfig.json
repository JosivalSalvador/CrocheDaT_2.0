{
  "compilerOptions": {
    /* --- 1. Módulos e Resolução (O Padrão Moderno) --- */
    "target": "ES2022",
    "module": "NodeNext",          // Gera imports/exports nativos (ESM)
    "moduleResolution": "NodeNext", // Algoritmo de resolução moderno
    
    /* --- 2. Estrutura --- */
    "rootDir": ".",
    "outDir": "./dist",
    "sourceMap": true,

    /* --- 3. Interoperabilidade --- */
    "esModuleInterop": true,       // Permite importar pacotes CJS antigos
    "resolveJsonModule": true,
    
    /* --- 4. Rigor Técnico (Strict) --- */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    /* --- 5. Ajustes para ESM --- */
    "verbatimModuleSyntax": true,
    
    /* --- 6. Tipos para o Vitest --- */
    "types": ["node", "vitest/globals"]
  },
  
  "include": [
    "src/**/*",
    "prisma.config.ts",
    "vitest.config.ts"
  ]
}